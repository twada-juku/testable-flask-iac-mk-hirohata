{% extends 'base.html.jinja' %}

{% block title %}技術一覧{% endblock %}

{% block section_title %}技術一覧{% endblock %}

{% block content %}
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">技術名</th>
        </tr>
      </thead>
      <tbody>
        {% for tech in technologies %}
          <tr>
            <td><a href="{{ url_for('technologies.show', url_name=tech.url_name) }}">{{ tech.name }}</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  <a href="{{ url_for('technologies.new') }}" class="btn btn-info">技術新規登録</a>
{% endblock %}
